<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="책 제목 : "
                android:textSize="20dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/titleInput"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저자 : "
                android:gravity="right"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/authorInput"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출판사 : "
                android:gravity="right"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/publisherInput"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쪽수 : "
                android:gravity="right"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/totalPagesInput"/>
        </TableRow>
    </TableLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!--
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:id="@+id/startYearSpinner"/>

        <Spinner
            android:id="@+id/startMonthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:id="@+id/startDateSpinner"/>
            -->

        <Spinner
            android:id="@+id/startDateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부터"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="80dp">
        <!--
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:id="@+id/endYearSpinner"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:id="@+id/endMonthSpinner"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:id="@+id/endDateSpinner"/>
        -->
        <Spinner
            android:id="@+id/endDateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="까지"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="시작하기"
        android:textSize="20dp"
        android:id="@+id/startButton"/>
</LinearLayout>